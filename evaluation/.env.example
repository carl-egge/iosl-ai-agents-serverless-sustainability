# Run identification + output
RUN_ID=demo_run_001
OUT_DIR=./out

# Load settings
TOTAL_REQUESTS_PER_URL=50
WARMUP_REQUESTS_PER_URL=5
CONCURRENCY=10
TIMEOUT_S=120
VERIFY_TLS=true

# Optional pacing
SLEEP_BETWEEN_REQUESTS_S=0
JITTER_S=0

# Auth (optional)
# AUTH_BEARER_TOKEN=ya29....
# EXTRA_HEADERS_JSON={"X-Api-Key":"...","X-Experiment":"baseline"}

# If your Cloud Run service needs a specific path (often "/" is fine)
REQUEST_PATH=/

# Provide comma-separated base URLs per function (e.g., one per region deployment)
API_HEALTH_CHECK_URLS=https://health-uc.a.run.app,https://health-eu.a.run.app
IMAGE_FORMAT_CONVERTER_URLS=https://img-uc.a.run.app,https://img-eu.a.run.app
CRYPTO_KEY_GEN_URLS=https://crypto-uc.a.run.app,https://crypto-eu.a.run.app
VIDEO_TRANSCODER_URLS=https://video-uc.a.run.app,https://video-eu.a.run.app

# ----------------------------
# Payload configuration
# ----------------------------

# IMAGE: prefer GCS mode for anything non-trivial
IMAGE_MODE=gcs
IMAGE_GCS_URI=gs://your-bucket/testdata/sample.png
IMAGE_RETURN_INLINE=false
# If you adapt your handler for inline, you can use:
# IMAGE_MODE=inline
# IMAGE_INLINE_KB=256

# CRYPTO
CRYPTO_KEY_SIZE=2048
CRYPTO_PUBLIC_EXPONENT=65537
CRYPTO_TARGET_MS=60000
CRYPTO_ITERATIONS=1

# VIDEO: prefer GCS mode
VIDEO_MODE=gcs
VIDEO_GCS_URI=gs://your-bucket/testdata/sample.bin
VIDEO_PASSES=3
VIDEO_TARGET_MS=0
VIDEO_RETURN_INLINE=false
# If you adapt your handler for inline:
# VIDEO_MODE=inline
# VIDEO_INLINE_KB=1024
